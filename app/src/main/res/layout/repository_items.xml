<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:elevation="5sp"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:id="@+id/repo_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">

            <ImageView
                android:id="@+id/repo_avatar"
                android:layout_centerHorizontal="true"
                android:layout_width="200dp"
                android:layout_height="200dp"/>

            <TextView
                android:id="@+id/repo_name"
                android:layout_below="@+id/repo_avatar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="Name" />

            <TextView
                android:id="@+id/repo_language"
                android:layout_below="@+id/repo_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="Language" />

            <TextView
                android:id="@+id/repo_owner"
                android:layout_below="@+id/repo_language"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="Owner" />

            <TextView
                android:id="@+id/repo_star"
                android:layout_below="@+id/repo_owner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="Star" />
            <TextView
                android:id="@+id/repo_desc"
                android:layout_below="@+id/repo_star"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:maxLines="2"
                android:textColor="@color/black"
                android:text="Desc" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>